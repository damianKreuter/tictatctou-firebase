<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="78dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tic_tac_toe" />

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/place2"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag1"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toTopOf="@+id/place5"
        app:layout_constraintEnd_toStartOf="@+id/place3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/place1"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place6"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag5"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="@+id/place5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/place5"
        app:layout_constraintTop_toTopOf="@+id/place5"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place7"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag6"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="@+id/place8"
        app:layout_constraintEnd_toStartOf="@+id/place8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/place8"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place8"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag7"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/place9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/place7"
        app:layout_constraintTop_toBottomOf="@+id/place5"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place9"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag8"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="@+id/place8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/place8"
        app:layout_constraintTop_toTopOf="@+id/place8"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place3"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag2"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="@+id/place2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/place2"
        app:layout_constraintTop_toTopOf="@+id/place2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place1"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag0"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="@+id/place2"
        app:layout_constraintEnd_toStartOf="@+id/place2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/place2"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place4"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag3"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toBottomOf="@+id/place5"
        app:layout_constraintEnd_toStartOf="@+id/place5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_empty_square" />

    <ImageView
        android:id="@+id/place5"
        android:layout_width="100dp"
        android:layout_height="96dp"
        android:tag="tag4"
        android:onClick="boxSelected"
        app:layout_constraintBottom_toTopOf="@+id/place8"
        app:layout_constraintEnd_toStartOf="@+id/place6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/place4"
        app:layout_constraintTop_toBottomOf="@+id/place2"
        app:srcCompat="@drawable/ic_empty_square" />

</androidx.constraintlayout.widget.ConstraintLayout>